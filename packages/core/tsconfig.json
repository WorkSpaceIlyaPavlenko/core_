{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/core/*": ["./src/*"]
    },
    "outDir": "dist",
    "skipLibCheck": true
  },

  "include": ["**/*.ts"]
}
